{
  "name": "typescript-multi-project",
  "version": "1.0.0",
  "description": "Typescript multi-project demo",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc -b",
    "clean": "rimraf dist",
    "test": "jest --passWithNoTests --no-cache --runInBand --config jest.config.js",
    "test:staged": "npm test --listTests --findRelatedTests",
    "prepare": "husky install",
    "test:coverage": "npm test -- --coverage"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.4.7",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "copyfiles": "^2.4.1",
    "eslint": "^7.31.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-junit": "^13.0.0",
    "jest-mock-extended": "^1.0.18",
    "lint-staged": "^11.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "express": "^4.17.2",
    "mongodb": "^4.3.0"
  }
}
